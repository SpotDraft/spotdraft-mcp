{
  "name": "@spotdraft/spotdraft-mcp",
  "version": "0.0.3",
  "description": "Integrate the SpotDraft API into agentic workflows via MCP",
  "author": "SpotDraft",
  "license": "MIT",
  "type": "module",
  "main": "build/index.js",
  "bin": "./build/index.js",
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "husky",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "start": "node build/index.js"
  },
  "keywords": [
    "mcp",
    "spotdraft",
    "agent",
    "autonomous",
    "ai",
    "contract"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.6.0",
    "axios": "^1.6.8",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "mcp-framework": "^0.2.13"
  },
  "devDependencies": {
    "@types/node": "^20.11.20",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,scss,md}": "prettier --write"
  }
}
